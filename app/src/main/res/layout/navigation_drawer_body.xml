<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigationdrawer_subtitle_and_listitems"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginRight="@dimen/navigationdrawer_marginright">

        <ImageView
            android:layout_width="@dimen/navigationdrawer_subtitle_and_listitems_imagesize"
            android:layout_height="@dimen/navigationdrawer_subtitle_and_listitems_imagesize"
            android:src="@drawable/inbox"
            android:layout_marginLeft="@dimen/navigationdrawer_marginleft"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inbox"
            android:textColor="@color/navigationDrawerTextColor"
            android:textSize="@dimen/navigationdrawer_textsize"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/navigationdrawer_subtitle_and_listitems_textmarginleft"
            android:gravity="left"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigationdrawer_subtitle_and_listitems"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginRight="@dimen/navigationdrawer_marginright">

        <ImageView
            android:layout_width="@dimen/navigationdrawer_subtitle_and_listitems_imagesize"
            android:layout_height="@dimen/navigationdrawer_subtitle_and_listitems_imagesize"
            android:src="@drawable/starred"
            android:layout_marginLeft="@dimen/navigationdrawer_marginleft"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Starred"
            android:textColor="@color/navigationDrawerTextColor"
            android:textSize="@dimen/navigationdrawer_textsize"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/navigationdrawer_subtitle_and_listitems_textmarginleft"
            android:gravity="left"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigationdrawer_subtitle_and_listitems"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginRight="@dimen/navigationdrawer_marginright">

        <ImageView
            android:layout_width="@dimen/navigationdrawer_subtitle_and_listitems_imagesize"
            android:layout_height="@dimen/navigationdrawer_subtitle_and_listitems_imagesize"
            android:src="@drawable/sentmails"
            android:layout_marginLeft="@dimen/navigationdrawer_marginleft"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sent mail"
            android:textColor="@color/navigationDrawerTextColor"
            android:textSize="@dimen/navigationdrawer_textsize"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/navigationdrawer_subtitle_and_listitems_textmarginleft"
            android:gravity="left"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigationdrawer_subtitle_and_listitems"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginRight="@dimen/navigationdrawer_marginright">

        <ImageView
            android:layout_width="@dimen/navigationdrawer_subtitle_and_listitems_imagesize"
            android:layout_height="@dimen/navigationdrawer_subtitle_and_listitems_imagesize"
            android:src="@drawable/drafts"
            android:layout_marginLeft="@dimen/navigationdrawer_marginleft"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Drafts"
            android:textColor="@color/navigationDrawerTextColor"
            android:textSize="@dimen/navigationdrawer_textsize"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/navigationdrawer_subtitle_and_listitems_textmarginleft"
            android:gravity="left"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#12000000"
        android:layout_marginTop="@dimen/navigationdrawer_space_between_contentarea"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigationdrawer_subtitle_and_listitems"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/navigationdrawer_space_between_contentarea"
        android:layout_marginRight="@dimen/navigationdrawer_marginright">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sub Header"
            android:textColor="@color/navigationDrawerSubHeaderTextColor"
            android:textSize="@dimen/navigationdrawer_textsize"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/navigationdrawer_marginleft"
            android:gravity="left"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigationdrawer_subtitle_and_listitems"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginRight="@dimen/navigationdrawer_marginright">

        <ImageView
            android:layout_width="@dimen/navigationdrawer_subtitle_and_listitems_imagesize"
            android:layout_height="@dimen/navigationdrawer_subtitle_and_listitems_imagesize"
            android:src="@drawable/allmail"
            android:layout_marginLeft="@dimen/navigationdrawer_marginleft"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="All mail"
            android:textColor="@color/navigationDrawerTextColor"
            android:textSize="@dimen/navigationdrawer_textsize"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/navigationdrawer_subtitle_and_listitems_textmarginleft"
            android:gravity="left"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigationdrawer_subtitle_and_listitems"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginRight="@dimen/navigationdrawer_marginright">

        <ImageView
            android:layout_width="@dimen/navigationdrawer_subtitle_and_listitems_imagesize"
            android:layout_height="@dimen/navigationdrawer_subtitle_and_listitems_imagesize"
            android:src="@drawable/trash"
            android:layout_marginLeft="@dimen/navigationdrawer_marginleft"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trash"
            android:textColor="@color/navigationDrawerTextColor"
            android:textSize="@dimen/navigationdrawer_textsize"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/navigationdrawer_subtitle_and_listitems_textmarginleft"
            android:gravity="left"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigationdrawer_subtitle_and_listitems"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginRight="@dimen/navigationdrawer_marginright">

        <ImageView
            android:layout_width="@dimen/navigationdrawer_subtitle_and_listitems_imagesize"
            android:layout_height="@dimen/navigationdrawer_subtitle_and_listitems_imagesize"
            android:src="@drawable/spam"
            android:layout_marginLeft="@dimen/navigationdrawer_marginleft"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Spam"
            android:textColor="@color/navigationDrawerTextColor"
            android:textSize="@dimen/navigationdrawer_textsize"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/navigationdrawer_subtitle_and_listitems_textmarginleft"
            android:gravity="left"/>

    </LinearLayout>

</LinearLayout>
</ScrollView>